{% extends 'base.html.twig' %}

{% block title %}Order{% endblock %}

{% block body %}
    <h1>Order</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ order.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ order.lastName }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ order.adress }}</td>
            </tr>
            <tr>
                <th>OrderContent</th>
                <td>{{ order.orderContent }}</td>
            </tr>
            <tr>
                <th>OrderDate</th>
                <td>{{ order.orderDate ? order.orderDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('order_edit', {'id': order.id}) }}" class="btn btn-secondary">Edit</a>

    {{ include('order/_delete_form.html.twig') }}

    <a href="{{ path('order_index') }}" class="btn btn-primary mr-2">Back to list</a>

{% endblock %}
